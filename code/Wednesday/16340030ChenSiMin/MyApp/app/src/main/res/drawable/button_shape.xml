<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- 按钮背景色 -->
    <solid android:color="#3F51B5" />
    <!-- 圆角半径 -->
    <corners android:radius="180dp" />
    <!-- 设置左右边框与文字间距10dp，上下边框与文字间距5dp -->
    <padding
        android:top="5dp"
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp" />
</shape>
